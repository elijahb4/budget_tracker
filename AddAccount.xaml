<Page x:Class="Individual_project_initial.AddAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Individual_project_initial"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAccount">

    <Grid>

        <TextBox Name="institutionNameTextBox" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Institution Name" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="accountNameTextBox" HorizontalAlignment="Center" Margin="0,33,0,0" TextWrapping="Wrap" Text="Account Nickname" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="accountNumberTextBox" HorizontalAlignment="Center" Margin="0,56,0,0" TextWrapping="Wrap" Text="Account Number" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="sortCodeTextBox" HorizontalAlignment="Center" Margin="0,79,0,0" TextWrapping="Wrap" Text="Sort Code" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="referenceTextBox" HorizontalAlignment="Center" Margin="0,102,0,0" TextWrapping="Wrap" Text="Reference" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="ibanTextBox" HorizontalAlignment="Center" Margin="0,125,0,0" TextWrapping="Wrap" Text="IBAN" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="bicTextBox" HorizontalAlignment="Center" Margin="0,148,0,0" TextWrapping="Wrap" Text="BIC" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="balanceTextBox" HorizontalAlignment="Center" Margin="0,171,0,0" TextWrapping="Wrap" Text="Starting Balance" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="currencyTextBox" HorizontalAlignment="Center" Margin="0,194,0,0" TextWrapping="Wrap" Text="Currency" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="interestRate" HorizontalAlignment="Center" Margin="0,171,0,0" TextWrapping="Wrap" Text="Interest Rate" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="AccountTypeComboBox" Margin="340,217,340,215" 
            SelectionChanged="AccountTypeComboBox_SelectionChanged"
            Height="20"
        />
        <Label Content="Overdraft" HorizontalAlignment="Center" Margin="0,235,0,0" VerticalAlignment="Top" Height="26" Width="120"/>
        <RadioButton Content="Yes" IsChecked="{Binding IsYes}" GroupName="BooleanGroup" HorizontalAlignment="Left" Margin="340,261,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="No" IsChecked="{Binding IsNo}" GroupName="BooleanGroup" HorizontalAlignment="Left" Margin="425,261,0,0" VerticalAlignment="Top"/>
        <Expander Visibility="{Binding ExpanderVisibility}" HorizontalAlignment="Center" Height="100" Header="Expander" Margin="0,281,0,0" VerticalAlignment="Top" Width="120">
            <StackPanel Width="120" Margin="0,0,0,-6">
                <TextBox Name="overdraftLimitTextBox" HorizontalAlignment="Left" Margin="511,225,0,0" TextWrapping="Wrap" Text="Overdraft Limit" VerticalAlignment="Top" Width="120"/>
                <TextBox Name="overdraftInterestRateTextBox" HorizontalAlignment="Left" Margin="137,178,0,0" TextWrapping="Wrap" Text="Overdraft Interest Rate" VerticalAlignment="Top" Width="138"/>
            </StackPanel>
        </Expander>
        <Button Content="Add Account" Click="SubmitButton_Click" HorizontalAlignment="Left" Margin="358,311,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
