<Window x:Class="Individual_project_initial.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Individual_project_initial"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Viewbox>
        <Grid Width="400" Height="300">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.ColumnSpan="3" Margin="100,0,100,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Center" FontSize="15" TextWrapping="Wrap" Text="Login" Grid.Row="0" Grid.ColumnSpan="2"/>
                <Button Content="Change Server" Click="ChangeServer_Btn" Grid.Row="1" Margin="0,0,0,6" Grid.RowSpan="2" HorizontalAlignment="Center" Width="200" Grid.Column="1"/>

                <TextBlock Text="Username:" Grid.Row="4" Grid.Column="1" VerticalAlignment="Top" Margin="10,0,112,0"/>
                <TextBox Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" MinWidth="40" x:Name="txtUsername" Margin="94,0,0,28" RenderTransformOrigin="0.5,0.5" Width="106">
                    <TextBox.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-0.26"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBox.RenderTransform>
                </TextBox>

                <TextBlock Text="Password:" Grid.Row="4" Grid.Column="1" VerticalAlignment="Top" Margin="15,25,111,0"/>
                <PasswordBox Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" MinWidth="40" x:Name="txtPassword" Height="18" VerticalAlignment="Top" Margin="94,25,0,0" Width="106"/>

                <Button Content="Login" Grid.Row="4" HorizontalAlignment="Center" Click="BtnLogin_Click" Tag="owner" Margin="0,48,0,-25" Grid.Column="1" Width="40"/>
                <Button Content="Create Account" Grid.Row="5" HorizontalAlignment="Center" Click="CreateAccount_Click" Tag="owner" Margin="0,48,0,-25" Grid.Column="1" Width="120"/>
            </Grid>
        </Grid>
    </Viewbox>
</Window>
