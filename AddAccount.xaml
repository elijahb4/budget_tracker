<Page x:Class="Individual_project_initial.AddAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Individual_project_initial"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="AddAccount">

    <Viewbox Stretch="Uniform">
        <Grid Height="720" Width="1280" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Add New Account" FontSize="30" HorizontalAlignment="Left" Margin="120,10,0,0" 
                       TextWrapping="Wrap" 
                       VerticalAlignment="Top" 
                       Height="35" 
                       Width="355" 
                       Grid.Row="0"/>
            <Separator HorizontalAlignment="Left" Height="15" Margin="120,10,0,0" VerticalAlignment="Top" Grid.Row="1" />
            <TextBox Name="institutionNameTextBox" Grid.Row="2" HorizontalAlignment="Left" Margin="120,0,0,0" TextWrapping="Wrap" Text="Institution Name" VerticalAlignment="Top" Width="120"/>
            <TextBox Name="accountNameTextBox" Grid.Row="3" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" Text="Account Nickname" VerticalAlignment="Top" Width="120"/>
            <TextBox Name="accountNumberTextBox" Grid.Row="4" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" Text="Account Number" VerticalAlignment="Top" Width="120"/>
            <TextBox Name="sortCodeTextBox" Grid.Row="5" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" Text="Sort Code" VerticalAlignment="Top" Width="120"/>
            <TextBox Name="referenceTextBox" Grid.Row="6" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" Text="Reference" VerticalAlignment="Top" Width="120"/>
            <TextBox Name="ibanTextBox" Grid.Row="7" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" Text="IBAN" VerticalAlignment="Top" Width="120"/>
            <TextBox Name="bicTextBox" Grid.Row="8" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" Text="BIC" VerticalAlignment="Top" Width="120"/>
            <TextBox Name="balanceTextBox" Grid.Row="9" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" Text="Starting Balance" VerticalAlignment="Top" Width="120"/>
            <TextBox Name="currencyTextBox" Grid.Row="10" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" Text="Currency" VerticalAlignment="Top" Width="120"/>
            <TextBox Name="interestRateTextBox" Grid.Row="11" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" Text="Interest Rate" VerticalAlignment="Top" Width="120"/>
            <ComboBox x:Name="AccountTypeComboBox" 
                      Grid.Row="12"
                      ItemsSource="{Binding AccountTypes}"
                      SelectionChanged="AccountTypeComboBox_SelectionChanged" 
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Top" 
                      Width="120"
                      Margin="120,10,0,0"
                      Background="#FFB1B1B1"/>
            <Button Content="Add Account" 
                    Click="SubmitButton_Click" 
                    Grid.Row="13"
                    HorizontalAlignment="Left" 
                    Margin="120,20,0,0" 
                    VerticalAlignment="Top"/>
        </Grid>
    </Viewbox>
</Page>