<Page x:Class="Individual_project_initial.AccountInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:oxy="http://oxyplot.org/wpf"
      xmlns:local="clr-namespace:Individual_project_initial"
      mc:Ignorable="d"
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="AccountInformation">

    <Viewbox Stretch="Uniform">
        <Grid Height="720" Width="1280" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" MinHeight="36.923"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto" MinHeight="314"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                       FontSize="30" HorizontalAlignment="Left" Margin="120,20,0,10"
                       TextWrapping="Wrap" Width="355">
                <Run Language="en-gb" Text="Account"/><Run Text=" Information"/>
            </TextBlock>
            <Separator Grid.Row="1" Grid.Column="0"
                       Margin="120,0,0,10" Width="355" HorizontalAlignment="Left"/>
            <TextBlock Text="Account Details" FontSize="24" Grid.Row="2" Grid.Column="0" Margin="120,0,30,5"/>
            <TextBlock Text="Transactions" FontSize="24" Grid.Row="2" Grid.Column="1" Margin="10,0,0,5"/>
            <ScrollViewer Grid.Row="3" Grid.Column="0"  VerticalScrollBarVisibility="Auto" Margin="120,0,30,5">
                <StackPanel x:Name="AccountStackPanel"/>
            </ScrollViewer>
            <ScrollViewer Grid.Row="3" Grid.Column="1"  VerticalScrollBarVisibility="Auto" Margin="10,0,110,5">
                <StackPanel x:Name="TransactionStackPanel"/>
            </ScrollViewer>
            <oxy:PlotView Model="{Binding BalanceChart}"
                          Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                          Margin="120,10,120,5"/>
            <Button Content=" Go Back" Click="BackButton_Click" Grid.Row="5" Grid.Column="0" Margin="120,5,420,10" />
        </Grid>
    </Viewbox>
</Page>