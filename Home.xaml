<Page x:Class="Individual_project_initial.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Individual_project_initial"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Home">
    <Viewbox Stretch="Uniform">
        <Grid Height="720" Width="1280" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Your Dashboard" FontSize="30" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="39" Width="355" Grid.Row="0"/>
            <Separator HorizontalAlignment="Left" Height="15" Margin="120,0,0,0" VerticalAlignment="Top" Width="355" Grid.Row="1"/>
            <TextBlock HorizontalAlignment="Left" Margin="120,0,0,0" TextWrapping="Wrap" Text="Total Balance" FontSize="18" VerticalAlignment="Top" Height="30" Width="300" Grid.Row="2"/>
            <TextBlock Name="BalanceTextBlock" HorizontalAlignment="Left" Margin="120,0,0,0" TextWrapping="Wrap" Text="Balance:" FontSize="28" VerticalAlignment="Top" Height="40" Width="686" Grid.Row="3"/>
            <Button Click="GoToAccounts_Click" Content="See all accounts" HorizontalAlignment="Left" Margin="120,0,0,0" VerticalAlignment="Top" Grid.Row="4"/>
            <TextBlock HorizontalAlignment="Left" Margin="120,0,0,0" TextWrapping="Wrap" Text="Transactions" FontSize="18" VerticalAlignment="Top" Height="30" Width="300" Grid.Row="5"/>
            <Button Click="AddTransaction_Click" Content="Add a transactions" HorizontalAlignment="Left" Margin="120,0,0,0" VerticalAlignment="Top" Grid.Row="6"/>
            <TextBlock HorizontalAlignment="Left" Margin="120,0,0,0" TextWrapping="Wrap" Text="Upcoming Targets" FontSize="18" VerticalAlignment="Top" Height="30" Width="300" Grid.Row="7"/>
            <Button Click="GoToTargets_Click" Content="See all targets" HorizontalAlignment="Left" Margin="120,0,0,0" VerticalAlignment="Top" Grid.Row="8"/>
            <TextBlock HorizontalAlignment="Left" Margin="120,0,0,0" TextWrapping="Wrap" Text="Upcoming Reminders" FontSize="18" VerticalAlignment="Top" Height="30" Width="300" Grid.Row="9"/>
            <Button Click="GoToReminders_Click" Content="See all reminders" HorizontalAlignment="Left" Margin="120,0,0,0" VerticalAlignment="Top" Grid.Row="10"/>
            <TextBlock HorizontalAlignment="Left" Margin="120,0,0,0" TextWrapping="Wrap" Text="Interest" FontSize="18" VerticalAlignment="Top" Height="30" Width="300" Grid.Row="11"/>
            <StackPanel HorizontalAlignment="Left" Name="InterestStackPanel" Height="173" Margin="120,0,0,0" VerticalAlignment="Top" Width="520" Grid.Row="12"/>
        </Grid>
    </Viewbox>
</Page>