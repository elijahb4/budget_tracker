<Window x:Class="Individual_project_initial.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Individual_project_initial"
        mc:Ignorable="d"
        Title="Register" Height="720" Width="1280">
    <Viewbox Stretch="Uniform">
        <Grid Height="720" Width="1280" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Row="0" Text="Make an Account" FontSize="30" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" Height="41" Width="314"/>
            <Separator Grid.Row="1" Margin="120,0,0,0" Height="15" Width="355" HorizontalAlignment="Left"/>
            <Label Grid.Row="2" Content="Username" HorizontalAlignment="Left" Margin="120,0,0,0" VerticalAlignment="Center" Width="120"/>
            <TextBox Grid.Row="3" Name="usernameTextBox" HorizontalAlignment="Left" Margin="120,0,0,0" TextWrapping="Wrap" Width="120"/>
            <Label Grid.Row="4" Content="Name" HorizontalAlignment="Left" Margin="120,0,0,0" VerticalAlignment="Center" Width="120"/>
            <TextBox Grid.Row="5" Name="nameTextBox" HorizontalAlignment="Left" Margin="120,0,0,0" TextWrapping="Wrap" Width="120"/>
            <Label Grid.Row="6" Content="Email" HorizontalAlignment="Left" Margin="120,0,0,0" VerticalAlignment="Center" Width="120"/>
            <TextBox Grid.Row="7" Name="emailTextBox" HorizontalAlignment="Left" Margin="120,0,0,0" TextWrapping="Wrap" Width="120"/>
            <Label Grid.Row="8" Content="Password" HorizontalAlignment="Left" Margin="120,0,0,0" VerticalAlignment="Center" Width="120"/>
            <PasswordBox Grid.Row="9" Name="PasswordBox" HorizontalAlignment="Left" Margin="120,0,0,0" Width="120"/>
            <Label Grid.Row="10" Content="Confirm Password" HorizontalAlignment="Left" Margin="120,0,0,0" VerticalAlignment="Center" Width="120"/>
            <PasswordBox Grid.Row="11" Name="PasswordConfirmBox" HorizontalAlignment="Left" Margin="120,0,0,0" Width="120"/>
            <Button Grid.Row="12" Content="Create Account" Click="RegisterButton_Click" HorizontalAlignment="Left" Margin="120,10,0,0"/>
            <Button Grid.Row="13" Content="Go Back" Click="ToLogin_Click" HorizontalAlignment="Left" Margin="120,10,0,0"/>
        </Grid>
    </Viewbox>
</Window>
