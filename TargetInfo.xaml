<Page x:Class="Individual_project_initial.TargetInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:oxy="http://oxyplot.org/wpf"
      xmlns:local="clr-namespace:Individual_project_initial"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="TargetInfo">

    <Viewbox Stretch="Uniform">
        <Grid Height="720" Width="1280" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" MinHeight="120.903"/>
                <RowDefinition Height="Auto" MinHeight="217"/>
                <RowDefinition Height="Auto" MinHeight="300"/>
                <RowDefinition Height="Auto" MinHeight="68"/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Text="Target Details" FontSize="30" HorizontalAlignment="Left" TextWrapping="Wrap" Width="314" Margin="120,2,0,119" Grid.RowSpan="2"/>
            <Separator Width="355" HorizontalAlignment="Left" Margin="120,14,0,10" Grid.RowSpan="2"/>
            <ScrollViewer Name="TargetDetailsScrollViewer" Grid.Row="2" Grid.Column="0" Margin="120,10,120,10">
                <StackPanel Name="AccountStackPanel" />
            </ScrollViewer>
            <oxy:PlotView Model="{Binding BalanceChart}"
              Grid.Row="3" Grid.Column="0"
              Margin="120,10,120,10"/>
            <Button Name="BackButton" Content="Go Back" Grid.Row="4" Margin="120,10,0,6" Width="100" HorizontalAlignment="Left" Click="BackButton_Click"/>
        </Grid>
    </Viewbox>
</Page>
