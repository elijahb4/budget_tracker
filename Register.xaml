<Window x:Class="Individual_project_initial.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Individual_project_initial"
        mc:Ignorable="d"
        Title="Register" Height="720" Width="1280">
    <Viewbox Stretch="Uniform">
        <Grid Height="720" Width="1280">
            <TextBlock HorizontalAlignment="Left" Height="41" Margin="120,10,0,0" TextWrapping="Wrap" Text="Make an Account" FontSize="30" VerticalAlignment="Top" Width="314"/>
            <Label Content="Username" HorizontalAlignment="Left" Margin="120,65,0,0" VerticalAlignment="Top" Width="120"/>
            <Separator HorizontalAlignment="Left" Height="15" Margin="120,50,0,0" VerticalAlignment="Top" Width="355"/>
            <TextBox Name="nameTextBox" HorizontalAlignment="Left" Margin="120,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Name" HorizontalAlignment="Left" Margin="120,109,0,0" VerticalAlignment="Top" Width="120"/>
            <TextBox Name="usernameTextBox" HorizontalAlignment="Left" Margin="120,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <TextBox Name="emailTextBox" HorizontalAlignment="Left" Margin="120,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" Margin="120,223,0,0" VerticalAlignment="Top" Width="120"/>
            <PasswordBox Name="PasswordConfirmBox" HorizontalAlignment="Left" Margin="120,269,0,0" VerticalAlignment="Top" Width="120"/>
            <Label Content="Email" HorizontalAlignment="Left" Margin="120,152,0,0" VerticalAlignment="Top" Width="120"/>
            <Label Content="Password" HorizontalAlignment="Left" Margin="120,197,0,0" VerticalAlignment="Top" Width="120"/>
            <Label Content="Confirm Password" HorizontalAlignment="Left" Margin="120,241,0,0" VerticalAlignment="Top" Width="120"/>
            <Button Content="Create Account" Click="RegisterButton_Click" HorizontalAlignment="Left" Margin="120,301,0,0" VerticalAlignment="Top"/>
            <Button Content="Go Back" Click="ToLogin_Click" HorizontalAlignment="Left" Margin="120,337,0,0" VerticalAlignment="Top"/>
        </Grid>
    </Viewbox>
</Window>
