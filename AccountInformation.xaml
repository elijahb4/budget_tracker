<Page x:Class="Individual_project_initial.AccountInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:oxy="http://oxyplot.org/wpf"
      xmlns:local="clr-namespace:Individual_project_initial"
      mc:Ignorable="d"
        d:DesignHeight="720" d:DesignWidth="1280"
  Title="AccountInformation">
    <Viewbox Stretch="Uniform">
        <Grid Height="720" Width="1280" Background="White">
            <TextBlock FontSize="30" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="35" Width="355">
            <Run Language="en-gb" Text="Account"/><Run Text=" Information"/>
            </TextBlock>
            <Separator HorizontalAlignment="Left" Height="15" Margin="120,51,0,0" VerticalAlignment="Top" Width="355"/>
            <StackPanel x:Name="AccountStackPanel" Margin="120,70,75,90">
                <!-- Temporary TextBlock for debugging -->
                <TextBlock Text="Debugging: This should be visible if StackPanel is correctly positioned."/>
                <oxy:PlotView Model="{Binding BalanceChart}" />
            </StackPanel>
        </Grid>
    </Viewbox>
</Page>
