<Page x:Class="Individual_project_initial.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Individual_project_initial"
      mc:Ignorable="d" 
        d:DesignHeight="720" d:DesignWidth="1280"
  Title="Settings">
    <Viewbox Stretch="Uniform">
        <Grid Height="720" Width="1280" Background="White">
            <TextBlock FontSize="30" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="47" Width="355"><Run Language="en-gb" Text="Settings"/></TextBlock>
            <Separator HorizontalAlignment="Left" Height="15" Margin="120,51,0,0" VerticalAlignment="Top" Width="355"/>
            <TextBlock HorizontalAlignment="Left" Margin="120,67,0,0" TextWrapping="Wrap" Text="Update your information" FontSize="18" VerticalAlignment="Top" Height="30" Width="300" />
            <Label Content="Change Username" HorizontalAlignment="Left" Margin="120,97,0,0" VerticalAlignment="Top" Width="127" Height="27"/>
            <TextBox Name="UsernameTextBox" HorizontalAlignment="Left" Margin="127,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20"/>
            <Button Click="ChangeUsername_Click" Content="Update" HorizontalAlignment="Left" Margin="255,124,0,0" VerticalAlignment="Top"/>
            <Label Content="Change Password" HorizontalAlignment="Left" Margin="120,146,0,0" VerticalAlignment="Top" Width="127" Height="27"/>
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="127,173,0,0" VerticalAlignment="Top" Width="120" Height="20"/>
            <Button Click="ChangePassword_Click" Content="Update" HorizontalAlignment="Left" Margin="255,173,0,0" VerticalAlignment="Top"/>
            <Label Content="Change Email" HorizontalAlignment="Left" Margin="120,195,0,0" VerticalAlignment="Top" Width="127" Height="27"/>
            <TextBox Name="EmailTextBox" HorizontalAlignment="Left" Margin="127,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20"/>
            <Button Click="ChangeEmail_Click" Content="Update" HorizontalAlignment="Left" Margin="255,222,0,0" VerticalAlignment="Top"/>
            <Label Content="Change Tax Free Savings Interest Limit" HorizontalAlignment="Left" Margin="120,244,0,0" VerticalAlignment="Top" Width="242" Height="27"/>
            <TextBox Name="TaxFreeTextBox" HorizontalAlignment="Left" Margin="127,271,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20"/>
            <Button Click="ChangeTaxFree_Click" Content="Update" HorizontalAlignment="Left" Margin="255,271,0,0" VerticalAlignment="Top"/>
        </Grid>
    </Viewbox>
</Page>
