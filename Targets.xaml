<Page x:Class="Individual_project_initial.Targets"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Individual_project_initial"
      mc:Ignorable="d" 
        d:DesignHeight="720" d:DesignWidth="1280"
  Title="Targets">
    <Viewbox Stretch="Uniform">
        <Grid Height="720" Width="1280" Background="White">
            <TextBlock FontSize="30" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="44" Width="355"><Run Text="Set a "/><Run Language="en-gb" Text="Target"/></TextBlock>
            <Separator HorizontalAlignment="Left" Height="15" Margin="120,52,0,0" VerticalAlignment="Top" Width="355"/>
            <Label HorizontalAlignment="Left" Content="Select Account:" Margin="120,60,0,0" VerticalAlignment="Top" Width="94"/>
            <Button Content="Set Target" x:Name="TargetSubmit" Click="SubmitButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="82" Margin="120,348,0,0"/>
            <ComboBox x:Name="AccountComboBox" HorizontalAlignment="Left" Margin="120,86,0,0" VerticalAlignment="Top" Width="120"/>
            <Label HorizontalAlignment="Left" Content="Target Type:" Margin="120,108,0,0" VerticalAlignment="Top" Width="94"/>
            <ComboBox x:Name="TargetComboBox" HorizontalAlignment="Left" Margin="120,134,0,0" VerticalAlignment="Top" Width="120"/>
            <Label Content="Start Date (Defaults to today if blank):" HorizontalAlignment="Left" Margin="120,199,0,0" VerticalAlignment="Top" Width="221"/>
            <Label Content="Target Date:" HorizontalAlignment="Left" Margin="120,249,0,0" VerticalAlignment="Top" Width="120"/>
            <DatePicker HorizontalAlignment="Left" Name="StartDatePicker" Margin="120,225,0,0" VerticalAlignment="Top" Width="120"/>
            <DatePicker HorizontalAlignment="Left" Name="TargetDatePicker" Margin="120,275,0,0" VerticalAlignment="Top" Width="120"/>
            <Label Content="Target Amount:" HorizontalAlignment="Left" Margin="120,156,0,0" VerticalAlignment="Top" Width="138"/>
            <TextBox HorizontalAlignment="Left" Name="AmountTextBox" Margin="120,182,0,0" TextWrapping="Wrap" Text="Enter Value" VerticalAlignment="Top" Width="120"/>
            <Label Content="Add a note (optional):" HorizontalAlignment="Left" Margin="120,299,0,0" VerticalAlignment="Top" Width="136"/>
            <TextBox HorizontalAlignment="Left" Name="NoteTextBox" Margin="120,325,0,0" TextWrapping="Wrap" Text="Note" VerticalAlignment="Top" Width="120"/>
        </Grid>
    </Viewbox>
</Page>
