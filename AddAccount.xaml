<Page x:Class="Individual_project_initial.AddAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Individual_project_initial"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAccount">

    <Grid Background="White">
        <TextBox Name="institutionNameTextBox" HorizontalAlignment="Left" Margin="120,73,0,0" TextWrapping="Wrap" Text="Institution Name" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="accountNameTextBox" HorizontalAlignment="Left" Margin="120,98,0,0" TextWrapping="Wrap" Text="Account Nickname" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="accountNumberTextBox" HorizontalAlignment="Left" Margin="120,121,0,0" TextWrapping="Wrap" Text="Account Number" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="sortCodeTextBox" HorizontalAlignment="Left" Margin="120,144,0,0" TextWrapping="Wrap" Text="Sort Code" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="referenceTextBox" HorizontalAlignment="Left" Margin="120,167,0,0" TextWrapping="Wrap" Text="Reference" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="ibanTextBox" HorizontalAlignment="Left" Margin="120,190,0,0" TextWrapping="Wrap" Text="IBAN" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="bicTextBox" HorizontalAlignment="Left" Margin="120,213,0,0" TextWrapping="Wrap" Text="BIC" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="balanceTextBox" HorizontalAlignment="Left" Margin="120,236,0,0" TextWrapping="Wrap" Text="Starting Balance" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="interestRate" HorizontalAlignment="Left" Margin="120,236,0,0" TextWrapping="Wrap" Text="Interest Rate" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="AccountTypeComboBox" ItemsSource="{Binding AccountTypes}" SelectionChanged="AccountTypeComboBox_SelectionChanged" HorizontalAlignment="Left" Margin="120,280,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock FontSize="30" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="39" Width="231"><Run Language="en-gb" Text="Add an Account"/></TextBlock>
        <Separator HorizontalAlignment="Left" Height="23" Margin="120,50,0,0" VerticalAlignment="Top" Width="355"/>
        <Label Content="Account Type" HorizontalAlignment="Left" Margin="120,254,0,0" VerticalAlignment="Top" Width="82"/>
        <Button Content="Add Account" Click="SubmitButton_Click" HorizontalAlignment="Left" Margin="143,307,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
