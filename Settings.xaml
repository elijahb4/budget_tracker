<Page x:Class="Individual_project_initial.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Individual_project_initial"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Settings">
    <Viewbox Stretch="Uniform">
        <Grid Height="720" Width="1280" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="390"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                       FontSize="30" Margin="140,10,95,0" TextWrapping="Wrap" Height="47" Width="355">
                <Run Language="en-gb" Text="Settings"/>
            </TextBlock>
            <Separator Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                       Margin="140,0,0,0" Height="15" Width="355" HorizontalAlignment="Left"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                       HorizontalAlignment="Left" Margin="140,10,0,0" TextWrapping="Wrap" Text="Update your information" FontSize="18" Height="30" Width="300" />

            <Label Grid.Row="3" Grid.Column="0" Content="Change Username" Margin="120,0,103,0" VerticalAlignment="Center" Width="127"/>
            <TextBox Grid.Row="4" Grid.Column="0" Name="UsernameTextBox" Margin="140,0,70,0" TextWrapping="Wrap" Height="20" VerticalAlignment="Center"/>
            <Button Grid.Row="4" Click="ChangeUsername_Click" Content="Update" Margin="325,0,145,0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <Label Grid.Row="5" Grid.Column="0" Content="Change Password" Margin="120,0,103,0" VerticalAlignment="Center" Width="127"/>
            <PasswordBox Grid.Row="6" Grid.Column="0" x:Name="txtPassword" Margin="140,0,70,0" Height="20" VerticalAlignment="Center"/>
            <Button Grid.Row="6" Click="ChangePassword_Click" Content="Update" Margin="325,0,145,0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <Label Grid.Row="7" Grid.Column="0" Content="Change Email" Margin="120,4,103,0" VerticalAlignment="Top" Width="127"/>
            <TextBox Grid.Row="7" Grid.Column="0" Name="EmailTextBox" Margin="140,33,70,0" TextWrapping="Wrap" Height="20" VerticalAlignment="Top" Grid.RowSpan="2"/>
            <Button Grid.Row="8" Click="ChangeEmail_Click" Content="Update" Margin="325,0,145,0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <Label Grid.Row="9" Grid.Column="0" Content="Change Tax Free Savings Interest Limit" Margin="140,0,0,0" VerticalAlignment="Center" Height="38"/>
            <TextBox Grid.Row="10" Grid.Column="0" Name="TaxFreeTextBox" Margin="140,0,70,0" TextWrapping="Wrap" Height="20" VerticalAlignment="Top"/>
            <Button Grid.Row="9" Click="ChangeTaxFree_Click" Content="Update" Margin="325,36,145,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        </Grid>
    </Viewbox>
</Page>
